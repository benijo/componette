{block #title}{$addon->fullname}{/block}
{block #description}{$addon->github->description}{/block}
{block #meta}
    <!-- TODO @IMAGE -->
{/block}
{block #wrapper}
<div n:snippet="search-result"></div>
<section class="page page-package clearfix">
    <section class="page-header">
        {control addon:header}

        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#tab-readme" role="tab" data-toggle="tab">Readme</a></li>
            <li role="presentation"><a href="#tab-releases" role="tab" data-toggle="tab">Releases <span class="badge">{$addon->github->releases->countStored()}</span></a></li>
            <li role="presentation"><a href="#tab-comments" role="tab" data-toggle="tab">Comments <span class="badge disqus-comment-count" data-disqus-url="{plink //this}">0</span></a></li>
        </ul>
    </section>


    <section class="page-sidebar">
        {control addon:sidebar}
        {control addon:report}
    </section>

    <section class="page-content">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tab-readme">
                {control addon:content}
            </div>
            <div role="tabpanel" class="tab-pane" id="tab-releases">
                {control addon:releases}
            </div>
            <div role="tabpanel" class="tab-pane" id="tab-comments">
                {control addon:comments}
            </div>
        </div>
    </section>
    <section n:if="$addon->isComposer && $addon->composerLatestStatistics" class="page-stats">
        {control addon:stats}
    </section>
</section>
{/block}

{block #scripts}
<script id="dsq-count-scr" src="//componette.disqus.com/count.js" async defer></script>
<script src="//componette.disqus.com/embed.js" async defer></script>
{/block}
